<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All pngs
    </h1>

    <a href="/pngs/new" class="btn btn-block btn-outline-secondary">
      Add a new png
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "png_templates/pngs_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Photo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @pngs.each do |png| %>
      <tr>
        <td>
          <%= png.id %>
        </td>

        <td>
          <%= png.photo_id %>
        </td>

        <td>
          <%= time_ago_in_words(png.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(png.updated_at) %> ago
        </td>

        <td>
          <a href="/pngs/<%= png.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @pngs, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
