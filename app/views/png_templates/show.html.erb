<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Png #<%= @png.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/pngs" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/pngs/<%= @png.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit png
        </a>
      </div>

      <div class="col">
        <a href="/delete_png/<%= @png.id %>" class="btn btn-block btn-outline-secondary">
          Delete png
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Photo
      </dt>
      <dd>
        <%= @png.photo_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@png.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@png.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

