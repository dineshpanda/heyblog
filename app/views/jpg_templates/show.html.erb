<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Jpg #<%= @jpg.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/jpgs" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/jpgs/<%= @jpg.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit jpg
        </a>
      </div>

      <div class="col">
        <a href="/delete_jpg/<%= @jpg.id %>" class="btn btn-block btn-outline-secondary">
          Delete jpg
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Photo
      </dt>
      <dd>
        <% if @jpg.photo.present? %>
          <a href="/photos/<%= @jpg.photo_id %>">
            <%= @jpg.photo.comment_id %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@jpg.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@jpg.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "jpg_templates/jpg_article" %>
  </div>
</div>
